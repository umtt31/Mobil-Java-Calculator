<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="4">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/percentageButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="%"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/CEButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="CE"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/CButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="C"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="Delete"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/divXButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="1/x"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/squareButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="x^2"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/squareRootButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="x^1/2"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/divButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="/"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_7Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="7"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_8Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="8"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_9Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="9"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/multiButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="X"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_4Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="4"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_5Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="5"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_6Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="6"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/subButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="-"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_1Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_2Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="2"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_3Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="3"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/sumButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="+"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="#d3d3d3"
            android:layout_margin="3dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/changeSymbolButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="+/-"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/_0Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/pointButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            android:id="@+id/resultButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="0dp"
            android:text="="
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="#0000FF"
            android:layout_margin="3dp"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnWeight="1"/>
    </GridLayout>

    </ScrollView>

</RelativeLayout>